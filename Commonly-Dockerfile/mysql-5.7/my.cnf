[mysql]
port=3306
default-character-set=utf8mb4
no-auto-rehash

[mysqld]
user=mysql
datadir=/var/lib/mysql/data
log-bin=/var/lib/mysql/log/mysql-bin
socket=/var/lib/mysql/mysql.sock
slow_query_log_file=/var/lib/mysql/log/slow.log
log-error=/var/lib/mysql/log/mysqld.log
pid-file=/var/lib/mysql/mysqld.pid

default-time_zone='+8:00'
log_timestamps=SYSTEM

default-storage-engine=InnoDB  
federated
character-set-server=utf8mb4
bulk_insert_buffer_size=128M

group_concat_max_len=10240
back_log=1024
symbolic-links=0
key_buffer_size=64M
join_buffer_size=128M
sort_buffer_size = 32M
read_buffer_size = 32M
table_definition_cache=1024
table_open_cache_instances=64

log_bin_trust_function_creators=1
skip-name-resolve=0
lower_case_table_names=1
sql-mode="STRICT_TRANS_TABLES,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION"

thread_cache_size=8
thread_stack=512K

query_cache_size=512M
query_cache_limit=8M

max_connections=4096
max_connect_errors=2000

interactive_timeout=86400
wait_timeout=86400
lock_wait_timeout=300
explicit_defaults_for_timestamp=1
expire_logs_days=30

general_log=0
log_output=FILE
sync_binlog=1
binlog_cache_size=4M
max_binlog_cache_size=1024M
max_binlog_size=1024M
log_warnings

master_info_repository=TABLE
relay_log_info_repository=TABLE
gtid_mode=on
enforce_gtid_consistency=1
binlog_format=row
relay_log_recovery=1
relay-log-purge=1
slow_query_log=1
long_query_time=1
slave-parallel-workers=4
log-slave-updates=0

max_allowed_packet=128M
max_heap_table_size=512M
tmp_table_size=512M

transaction_isolation=REPEATABLE-READ

server-id=1

innodb_force_recovery=0

innodb_sync_spin_loops=100
innodb_spin_wait_delay=30

innodb_write_io_threads=16
innodb_read_io_threads=16
innodb_thread_concurrency=8
innodb_flush_log_at_trx_commit=2
innodb_buffer_pool_size=1G
innodb_data_file_path=ibdata1:256M:autoextend:max:4G
innodb_temp_data_file_path = ibtmp1:128M:autoextend:max:4G
innodb_buffer_pool_instances=8
innodb_buffer_pool_load_at_startup=1
innodb_buffer_pool_dump_at_shutdown=1

innodb_log_file_size=512M
innodb_log_buffer_size=128M
innodb_purge_threads=8
innodb_page_cleaners=8
innodb_open_files=65000
innodb_max_dirty_pages_pct=90
innodb_log_files_in_group=3
innodb_lock_wait_timeout=120
innodb_max_undo_log_size=128M
innodb_lru_scan_depth=256

[mysqldump]
quick
max_allowed_packet=32M

[myisamchk]
key_buffer_size=128M
sort_buffer_size=128M
read_buffer=32M
write_buffer=32M

[mysqlhotcopy]
interactive-timeout

[mysqld_safe]
open-files-limit=65535
